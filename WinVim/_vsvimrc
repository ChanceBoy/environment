
set clipboard=unnamed


nnoremap s <Nop>

" window
" window間を移動
nnoremap sj <C-w>j
nnoremap sk <C-w>k
nnoremap sl <C-w>l
nnoremap sh <C-w>h
" windowそのものを移動
nnoremap sJ <C-w>J
nnoremap sK <C-w>K
nnoremap sL <C-w>L
nnoremap sH <C-w>H
" window分割
nnoremap ss :<C-u>sp<CR>
nnoremap sv :<C-u>vs<CR>

" 単語選択
nnoremap vv viw

" 空行のインデントを勝手に消さない
nnoremap o oX<C-h>
nnoremap O OX<C-h>
inoremap <CR> <CR>X<C-h>
